{
  "name": "yt-tubesaver",
  "version": "1.0.0",
  "description": "YouTube视频下载桌面工具",
  "main": "main/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "yt-tubesaver",
    "files": [
      "**/*",
      "yt-dlp.exe",
      "ffmpeg.exe"
    ],
    "win": {
      "target": "nsis",
      "icon": "ico/logo.ico"
    }
  }
}